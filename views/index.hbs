<section id="todo-index">
    <div class="create-row">
        <form action="notes">
            <button class="btn btn-primary" id="create-todo-btn" type="submit">
                Create new todo
            </button>
        </form>
    </div>

    <div class="filter-row">
        <div class="filter-row-pull-left">
            <form action="">
                <button class="btn btn-primary" type="submit">Name</button>
            </form>

            </form action="">
                <button class="btn btn-primary" type="submit">By Due Date</button>
            </form>

            </form action="">
                <button class="btn btn-primary" type="submit">By Creation Date</button>
            </form>

            </form action="">
                <button class="btn btn-primary" type="submit">By Importance</button>
            </form>
        </div>

        <div class="filter-row-pull-right">
            <form>
                <button class="btn btn-primary" type="submit">Filter completed</button>
            </form>
        </div>

    </div>

    <div class="notes-row">
        {{#each notes}}
            <article class="note">

                <div class="note-col">
                    <div>
                        {{to_date_string this.dueDate}}
                    </div>

                    <div>
                        <label>
                            <input type="checkbox" {{#if this.finished}}checked{{/if}} disabled>
                            {{#if this.finished}}
                                Completed
                            {{else}}
                                Open
                            {{/if}}
                        </label>
                    </div>
                </div>

                <div class="note-col">
                    <div>
                        <strong>{{this.title}}</strong>
                    </div>

                    <div>
                        {{this.description}}
                    </div>
                </div>

                <div class="note-prio">
                    {{importance_display this.importance}}
                </div>

                <div class="note-edit">
                    <a class="btn btn-primary" href="/notes/{{this._id}}">Edit</a>
                </div>
            </article>
        {{/each}}

    </div>
</section>
